

CC = gcc
CFLAGS = -Wall

all: longest_line
.PHONY : all

longest_line: my_getchar3.o longest_line.o
	$(CC) $(CFLAGS) -o line_counting.o my_getchar3.o
	
my_getchar3.o : my_getchar3.c
	$(CC) $(CFLAGS) -c -o my_getchar3.c my_getchar3.o
	
longest_line.o: longest_line.c
	$(CC) $(CFLAGS) -c -o longest_line.c longest_line.o
	
debug: clean my_getchar3.c longest_line.c
	$(CC) $(CFLAGS) -g -o test my_getchar3.c longest_line.c
	gdb -tui test

.PHONY: clean
clean:
	rm -rf *.o
