

CC = gcc
CFLAGS = -Wall

all: line_counting
.PHONY : all

line_counting: my_getchar2.o line_counting.o
	$(CC) $(CFLAGS) -o line_counting.o my_getchar2.o
	
my_getchar2.o : my_getchar2.c
	$(CC) $(CFLAGS) -c -o my_getchar2.c my_getchar2.o
	
line_counting.o: line_counting.c
	$(CC) $(CFLAGS) -c -o line_counting.c line_counting.o
	
debug: clean my_getchar2.c line_counting.c
	$(CC) $(CFLAGS) -g -o test my_getchar2.c line_counting.c
	gdb -tui test

.PHONY: clean
clean:
	rm -rf *.o
